{
  "scripts": {
    "deploy": "tsc && nodemon --watch truffle.js --exec 'truffle migrate || true'",
    "test": "truffle compile && tsc && nodemon --inspect=0.0.0.0:9229 --watch test --exec 'truffle test || true' -e ts",
    "develop:watch": "truffle compile && tsc && truffle test && npm run clean:js",
    "truffle:test": "nodemon --inspect=0.0.0.0:9229 --watch test --exec 'truffle test'",
    "develop": "nodemon -e ts --inspect=0.0.0.0:9229 --watch test --exec 'npm run develop:watch'",
    "clean:js": "del-cli test/**/*.js && del-cli scripts/migrations/*.js && del-cli scripts/load_migrations.js && del-cli scripts/restore_migrations.js && del-cli scripts/eventsTopics.js",
    "test:ci": "truffle compile && tsc && truffle test",
    "deploy:kaleido": "tsc && nodemon --watch truffle.js --exec './truffle_migrate.sh || true'",
    "test:kaleido": "tsc && nodemon --inspect=0.0.0.0:9229 --watch test --exec './truffle_migrate.sh && truffle test || true' -e ts",
    "ts:generate": "sol-ts-generator --glob './build/contracts/*.json' --outDir './types'",
    "truffle:migrate": "truffle migrate --reset",
    "migrate": "npm run migrations:load && ./truffle_migrate.sh",
    "migrations:restore": "truffle compile && tsc && node scripts/restore_migrations.js",
    "migrations:load": "truffle compile && tsc && node scripts/load_migrations.js",
    "events:topics": "node scripts/eventsTopics.js"
  },
  "dependencies": {
    "@komgo/smart-contracts": "^2.9.3",
    "@komgo/sol-ts-generator": "^1.3.0",
    "eth-ens-namehash": "^2.0.8",
    "pako": "1.0.6",
    "truffle": "^4.1.15",
    "truffle-contract": "^4.0.13",
    "ts-node": "^7.0.0",
    "web3": "^0.20.0",
    "web3-eth-abi": "1.0.0-beta.37",
    "web3-utils": "1.0.0-beta.37",
    "websocket": "^1.0.28"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^2.2.41",
    "bignumber.js": "^7.2.1",
    "chai": "^4.1.0",
    "del-cli": "^1.1.0",
    "ethereumjs-util": "^5.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.11.0",
    "prettier": "^1.13.7",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^2.4.2"
  }
}
