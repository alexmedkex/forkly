{
  "compilerOptions": {
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "target": "es5"
  },
  "include": [
    "test/**/*",
    "types/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}