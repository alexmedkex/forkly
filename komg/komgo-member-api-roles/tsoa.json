{
    "swagger": {
        "info": {
            "description": "A Login authorization and registration using jwt for adding movies",
            "version": "1.0.0",
            "title": "User Login Auth and Registration for adding movies"
        },
        "tags":[
            {
                "name":"Roles",
                "description":"CRUD operations with roles"
            },
            {
                "name":"Permissions",
                "description":"Check permissions"
            },
            {
                "name":"Health",
                "description":"Health and readiness endpoints"
            }
        ],
        "schemes": [ "http", "https" ],
        "securityDefinitions": {
            "api_key": {
                "type": "apiKey",
                "name": "access_token",
                "in": "header"
            }
        },
        "outputDirectory": "./dist",
        "entryFile": "./src/run-server.ts",
        "host": "localhost:3103",
        "basePath": "/v0"
    },
    "routes": {
        "basePath": "/v0",
        "middlewareTemplate": "./node_modules/@komgo/microservice-config/src/request-context/tsoa-templates/express.hbs",
        "authenticationModule": "./src/middleware/common/authentication/authentication.ts",
        "entryFile": "./src/run-server.ts",
        "routesDir": "./src/middleware/server-config",
        "iocModule" : "./src/inversify/ioc"
    }
}