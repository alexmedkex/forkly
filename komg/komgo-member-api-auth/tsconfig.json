{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "types": ["reflect-metadata", "jest"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*",
    "types/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/middleware/server-config/router-template.ts"
  ],
  "compileOnSave": false
}