{
  "name": "komgo-member-api-auth",
  "version": "1.0.0",
  "description": "KomGo API with Express, node 8, mongo, and JWT",
  "author": "KomGo team",
  "license": "MIT",
  "main": "dist/run-server.js",
  "scripts": {
    "check": "npm-check --skip-unused",
    "start": "npm-run-all -s clean build start:simple",
    "start:simple": "node ./dist/run-server.js",
    "start:dev": "npm-run-all -s wait-for-kc clean build -p watch:*",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "build": "npm-run-all -s build:swagger",
    "build:swagger": "npm run copy-swagger-config && npm run swagger-gen && npm run routes-gen && tsc",
    "watch:tsoa": "onchange './src/**/*.*' -d 3104 -- npm run swagger-gen && npm run routes-gen",
    "watch:node": "nodemon --inspect=0.0.0.0:9229 --watch src --delay 2.5 ./dist/run-server.js -e ts",
    "watch:ts": "tsc --watch",
    "tslint": "tslint -p . -c tslint.json",
    "tslint:ci": "npm run tslint -- -t json -o report-lint.json",
    "tslint:fix": "npm run tslint -- --fix",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "copy-swagger-config": "ncp ./config-default ./config",
    "prettier": "prettier --write 'src/**/*.{ts,js,json}'",
    "check-formatting": "prettier --list-different 'src/**/*.{ts,ts,js,json}'",
    "tsoa": "tsoa",
    "pretest": "npm run routes-gen",
    "pretest:ci": "npm run routes-gen",
    "pretest:dev": "npm run routes-gen",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:coverage": "npm run test -- --coverage",
    "pretest:coverage": "npm run routes-gen",
    "wait-for-kc": "cross-env-shell \"./scripts/wait-for-it.sh $(echo $KEYCLOAK_SERVER_AUTH_URL | tr '/' ' ' | awk '{print $2}') -t 500\""
  },
  "jestSonar": {
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 85,
        "functions": 90,
        "lines": 95
      }
    },
    "globals": {
      "ts-jest": {
        "babelConfig": false,
        "diagnostics": false
      }
    },
    "testEnvironment": "node",
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/*/**/*.{ts,js}",
      "!src/**/{router-template,routes,index}.{ts,js}",
      "!src/presentation-layer/documentation/**/*"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "keywords": [
    "typescript",
    "swagger",
    "docker",
    "express"
  ],
  "engines": {
    "node": "~8.11.3"
  },
  "engineStrict": true,
  "dependencies": {
    "@komgo/error-utilities": "^5.3.3",
    "@komgo/health-check": "^2.1.0",
    "@komgo/logging": "^3.3.0",
    "@komgo/microservice-config": "^7.4.1",
    "@komgo/permissions": "^12.6.0",
    "@komgo/products": "^3.2.0",
    "axios": "^0.18.1",
    "class-validator": "^0.8.5",
    "compose-middleware": "^5.0.1",
    "config": "^1.31.0",
    "event-dispatch": "^0.4.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-winston": "^2.6.0",
    "glob": "^7.1.4",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "keycloak-connect": "^6.0.1",
    "lodash": "^4.17.15",
    "memoizee": "^0.4.14",
    "mongoose": "^5.6.0",
    "npm-run-all": "^3.1.2",
    "path-to-regexp": "^2.4.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "tsoa": "^2.3.7",
    "typedi": "^0.4.3",
    "typescript": "^3.2.2",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.29",
    "@types/cookie-parser": "^1.3.30",
    "@types/express": "^4.17.0",
    "@types/jest": "^24.0.16",
    "@types/js-yaml": "^3.12.1",
    "@types/jsonwebtoken": "~7.2.0",
    "@types/memoizee": "^0.4.2",
    "@types/method-override": "0.0.27",
    "@types/node": "^7.10.6",
    "@types/serve-static": "^1.7.27",
    "@types/swagger-express-mw": "0.7.6",
    "@types/winston": "^2.2.0",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "jest-mock": "^24.8.0",
    "jest-sonar-reporter": "^2.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^1.19.1",
    "onchange": "^5.2.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.4.1",
    "swagger-jsdoc": "^1.9.2",
    "ts-helpers": "^1.1.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^6.0.5",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0"
  }
}
