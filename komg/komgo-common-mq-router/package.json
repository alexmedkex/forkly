{
  "name": "komgo-common-mq-router",
  "version": "1.0.0",
  "description": "Initial commit",
  "main": "dist/index.js",
  "scripts": {
    "start:dev": "ts-node-dev --no-notify ./src/start.ts",
    "build": "tsc -p .",
    "prettier": "prettier --write '{src,integration-tests}/**/*.{ts,tsx,js,json}'",
    "check-formatting": "prettier --list-different '{src,integration-tests}/**/*.{ts,ts,js,json}'",
    "test": "jest \"^(((?!integration.test.(tsx?|jsx?)).)*(test|spec)\\.(tsx?|jsx?))$\"",
    "test:dev": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --coverage",
    "test:all": "npm run check-formatting && npm run lint && npm run test:coverage",
    "test:integration": "COMMON_BROKER_AMQP_URI=amqp://guest:guest@localhost:5672/ jest '((integration)(\\.|/)(test|spec))\\.(jsx?|tsx?)$' --runInBand --forceExit --detectOpenHandles --verbose ",
    "tslint": "tslint -p . -c tslint.json",
    "tslint:ci": "npm run tslint -- -t json -o report-lint.json",
    "tslint:fix": "npm run tslint -- --fix",
    "start": "echo \"This package is not meant to be run independently\" && exit 1",
    "is-ready": "node ./dist/is-ready.js",
    "is-ready:dev": "ts-node ./src/is-ready.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:ConsenSys/client/uk/KomGo/komgo-common-mq-router.git"
  },
  "author": "KOMGO",
  "license": "ISC",
  "devDependencies": {
    "@komgo/integration-test-utilities": "^3.1.2",
    "@types/amqp-connection-manager": "^2.0.1",
    "@types/amqplib": "^0.5.8",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/nodemailer": "^6.2.0",
    "@types/winston": "^2.4.4",
    "jest": "^24.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "node-docker-api": "^1.1.22",
    "prettier": "^1.14.2",
    "ts-jest": "^23.10.5",
    "ts-node-dev": "^1.0.0-pre.39",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^3.0.3",
    "web3": "^1.0.0-beta.54"
  },
  "dependencies": {
    "@komgo/error-utilities": "^5.3.1",
    "@komgo/logging": "^3.2.1",
    "@komgo/types": "^12.1.0",
    "@types/node": "^12.0.4",
    "amqp-connection-manager": "^2.2.0",
    "amqplib": "^0.5.2",
    "axios": "^0.19.0",
    "nodemailer": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "winston": "^2.4.4"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "globals": {
      "ts-jest": {
        "babelConfig": false,
        "diagnostics": true
      }
    },
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/*/**/*.{ts,js}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  }
}
