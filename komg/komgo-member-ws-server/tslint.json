{
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "rules": {
    "indent": [
      true,
      "spaces"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "class-name": true,
    "semicolon": false,
    "no-submodule-imports": [
      true,
      "web3/types"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "eofline": true,
    "jsdoc-format": true,
    "member-access": false,
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "curly": false,
    "no-reference": false,
    "no-var-requires": false,
    "only-arrow-functions": false,
    "no-empty-interface": false,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "named-imports-order": "any"
      }
    ],
    "no-trailing-whitespace": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "src/middleware/server-config/routes.ts",
      "node_modules/**/*.ts"
    ]
  }
}
