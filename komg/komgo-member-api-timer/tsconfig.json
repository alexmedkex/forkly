{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "types": [
      "reflect-metadata"
    ],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "types/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "compileOnSave": false
}