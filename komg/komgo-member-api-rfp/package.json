{
  "name": "komgo-api-rfp",
  "version": "0.0.1",
  "description": "KomGo API with Express, node 8, mongo, and JWT",
  "author": "KomGo team",
  "main": "dist/run-server.js",
  "scripts": {
    "check": "npm-check --skip-unused",
    "start": "npm-run-all -s clean build start:simple",
    "start:simple": "node ./dist/run-server.js",
    "start:dev": "npm-run-all -s clean build -p watch:*",
    "start:mock": "npm-run-all -s clean build:swagger-yaml",
    "clean": "npm-run-all -p clean:*",
    "clean:dist": "rimraf dist",
    "clean:cov": "rimraf coverage",
    "build": "npm-run-all -s build:swagger",
    "build:swagger": "npm-run-all -s swagger-gen routes-gen tsc",
    "watch:tsoa": "onchange './src/**/*.*' -d 3103 -- npm run swagger-gen && npm run routes-gen",
    "watch:node": "nodemon --inspect=0.0.0.0:9229 --watch src --delay 2.5 ./dist/run-server.js -e ts",
    "watch:ts": "tsc --watch",
    "tslint": "tslint -p . -c tslint.json",
    "tslint:ci": "npm run tslint -- -t json -o report-lint.json",
    "tslint:fix": "npm run tslint -- --fix",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "copy-swagger-ui": "ncp ./src/presentation-layer/documentation/swagger-ui ./dist/swagger-ui",
    "copy-swagger-config": "ncp ./config-default ./config",
    "copy-swagger-mock-config": "ncp ./config-mock ./config",
    "swagger-mock": "swagger_swagger_fileName=dist/swagger.yaml swagger project edit --host 0.0.0.0 -p 81 -s & swagger_swagger_fileName=dist/swagger.yaml swagger project start -m",
    "prettier": "prettier --write 'src/**/*.{ts,js,json}'",
    "check-formatting": "prettier --list-different 'src/**/*.{ts,ts,js,json}'",
    "tsoa": "tsoa",
    "pretest": "npm run routes-gen",
    "test": "jest",
    "test:unit": "npm run copy-swagger-config && jest src",
    "test:unit:dev": "npm run test:unit -- --watchAll",
    "test:ci": "npm run test:unit",
    "pretest:integration": "npm run routes-gen",
    "test:integration": "jest integration-tests --runInBand --detectOpenHandles --passWithNoTests --forceExit",
    "test:integration:dev": "jest integration-tests --runInBand --detectOpenHandles --watchAll --forceExit",
    "pretest:coverage": "npm run routes-gen",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:all": "CI=true npm-run-all check-formatting tslint test:coverage",
    "tsc": "tsc",
    "wait-for-database": "cross-env-shell \"./config/wait-for-it.sh $MONGO_URL\"",
    "migration:up": "migrate-mongo -f config/db-migrations.js up",
    "migration:down": "migrate-mongo -f config/db-migrations.js down",
    "migration:create": "migrate-mongo -f config/db-migrations.js create"
  },
  "jestSonar": {
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 78,
        "TODO increase branches": "too low",
        "functions": 90,
        "lines": 90
      }
    },
    "globals": {
      "ts-jest": {
        "babelConfig": false,
        "diagnostics": false
      }
    },
    "preset": "ts-jest",
    "testMatch": null,
    "testEnvironment": "node",
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/*/**/*.{ts,js}",
      "!src/**/{routes,index,faker}.{ts,js}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "keywords": [
    "typescript",
    "swagger",
    "docker",
    "express"
  ],
  "engines": {
    "node": "~8.11.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ],
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "engineStrict": true,
  "dependencies": {
    "@komgo/data-access": "^4.0.0",
    "@komgo/error-utilities": "^5.3.1",
    "@komgo/health-check": "^2.1.0",
    "@komgo/logging": "^3.3.0",
    "@komgo/messaging-library": "^6.2.9",
    "@komgo/microservice-config": "^7.3.1",
    "@komgo/notification-publisher": "^7.6.0",
    "@komgo/permissions": "^11.5.0",
    "@komgo/retry": "^3.0.1",
    "@komgo/types": "^24.6.0",
    "@types/express": "^4.17.0",
    "ajv": "^6.10.0",
    "axios": "0.18.1",
    "axios-error": "^0.7.11",
    "axios-retry": "^3.1.2",
    "class-validator": "^0.9.1",
    "config": "^1.21.0",
    "eth-ens-namehash": "^2.0.8",
    "express": "^4.17.1",
    "express-ping": "^1.1.0",
    "express-winston": "^2.6.0",
    "husky": "^2.5.0",
    "inversify": "^4.13.0",
    "inversify-binding-decorators": "^3.2.0",
    "js-yaml": "^3.13.0",
    "lint-staged": "^8.2.1",
    "lodash": "^4.17.15",
    "migrate-mongo": "^6.0.2",
    "mongodb": "^3.2.7",
    "mongodb-uri": "^0.9.7",
    "mongoose": "^5.7.1",
    "ncp": "^2.0.0",
    "reflect-metadata": "^0.1.3",
    "tsoa": "^2.4.2",
    "typescript": "^3.5.2",
    "uuid": "^3.3.2",
    "winston": "^2.4.4"
  },
  "devDependencies": {
    "@komgo/integration-test-utilities": "^5.1.0",
    "@komgo/messaging-types": "^2.0.2",
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.29",
    "@types/jest": "^24.0.15",
    "@types/mongodb": "^3.1.28",
    "@types/mongoose": "^5.5.6",
    "@types/node": "^11.13.15",
    "@types/swagger-express-mw": "0.7.6",
    "@types/winston": "^2.2.0",
    "jest": "^24.5.0",
    "jest-create-mock-instance": "^1.1.0",
    "jest-mock": "^24.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "mock-http-server": "^1.2.0",
    "npm-check": "^5.7.1",
    "npm-run-all": "^3.0.0",
    "onchange": "^5.2.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.5.2",
    "source-map-support": "^0.4.1",
    "ts-helpers": "^1.1.1",
    "ts-jest": "^24.0.0",
    "ts-node": "^6.0.5",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.14.0",
    "validator": "^10.11.0",
    "wait-for-expect": "^1.2.0",
    "web3": "^1.0.0-beta.55"
  }
}
